<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/new_logo"/>

        <TextView
            android:id="@+id/view_inv_dialog_view_pdf1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="Select Option"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_quo_dialog_view_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_view_pdf"
            android:gravity="center"
            android:padding="32dp"
            android:text="View Quotation"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/view_quo_dialog_send_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_mail_black"
            android:gravity="center"
            android:padding="32dp"
            android:text="Mail Quotation"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_del_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_inv_dialog_convert_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_convert_invoice"
            android:gravity="center"
            android:padding="32dp"
            android:text="Edit Quotation / Convert to Invoice"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/view_quo_dialog_add_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_delete"
            android:gravity="center"
            android:padding="32dp"
            android:text="Delete Quotation"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- <View
             android:layout_width="2dp"
             android:layout_height="fill_parent"
             android:background="@color/view"/>

         <TextView
             android:id="@+id/view_inv_dialog_add_credit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="?attr/selectableItemBackground"
             android:clickable="true"
             android:drawablePadding="10dp"
             android:drawableTop="@drawable/ic_plus_black"
             android:gravity="center"
             android:padding="32dp"
             android:text="Add Credit Note"
             android:textColor="@android:color/black"
             android:textSize="16sp" />-->
    </LinearLayout>

</LinearLayout>