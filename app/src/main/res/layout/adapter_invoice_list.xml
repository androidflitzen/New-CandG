<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_invoicelist_a_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:weightSum="11">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10dp">

                    <TextView
                        android:id="@+id/txt_invoicelist_a_no"
                        fontPath="@string/font_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S - 1"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ef5350"
                        android:padding="10dp"
                        tools:ignore="MissingPrefix" />

                    <LinearLayout
                        android:id="@+id/txt_invoicelist_a_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_12dp"
                            android:layout_height="@dimen/_12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bg_circle"
                            android:tint="@color/green">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="Cash Sale"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/green" />

                        <!-- </androidx.cardview.widget.CardView>-->

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/txt_invoicelist_a_po_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="PO"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/txt_color1" />

                <TextView
                    android:id="@+id/txt_invoicelist_a_c_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:text="Name"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/txt_color1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_invoicelist_a_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="22 Dec,2016"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/txt_invoicelist_a_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/txt_color2"
                        android:textSize="15dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_invoicelist_a_c_sub_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="$123"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/txt_color1" />

                <TextView
                    android:id="@+id/txt_invoicelist_a_c_vat_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="$321"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/txt_color1" />

                <TextView
                    android:id="@+id/txt_invoicelist_a_amount"
                    fontPath="@string/font_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="213.00"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt_invoicelist_a_paid"
                    fontPath="@string/font_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt_invoicelist_a_due"
                    fontPath="@string/font_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    tools:ignore="MissingPrefix" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                </View>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />

</LinearLayout>
